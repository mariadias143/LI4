@model IEnumerable<JARVIS.Models.Receita>;
@{
    Layout = "~/Views/Shared/_LayoutTeste.cshtml";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('/salvacao/images/bg_4.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">Recipes</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-4 menu-wrap">
                   
                    @foreach (JARVIS.Models.Receita r in Model.Take(2))
                    {
                    <div class="menus d-flex ftco-animate">
                        <div class="menu-img img" style="background-image: url(/salvacao/images/massa.jpg);"></div>
                        <div class="text">
                            <div class="d-flex">
                                <div class="one-half">

                                    <h3><a href="/Recipe/Ingredients/@r.idReceita">@r.Nome</a></h3>
                                </div>  
                            </div>
                            <p>
                                @foreach(JARVIS.Models.Alimento a in r.Ingredientes)
                                {
                                    <span>@a.Nome,</span>
                                }
                            </p>
                        </div>
                    </div>
                    }

                </div>
            </div>
        </div>
</section>

